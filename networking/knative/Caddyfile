# add each subdomain to /etc/hosts to test
# e.g. 
# 127.0.0.1 test.grogu.hosts.pve

vars minikube_ip 192.168.49.2

test.grogu.hosts.pve:80 {
	tls internal
	respond "Hello, world!"
}

dashboard.grogu.hosts.pve:80 {
  tls internal

  reverse_proxy {minikube_ip}:8001
}

*.grogu.hosts.pve:80 {
	tls internal

	reverse_proxy {minikube_ip}:32518 {
		header_up Host {labels.3}.default.local.knative
	}
}
